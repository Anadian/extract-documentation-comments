{
	"name": "ci",
	"on": [
		"push"
	],
	"jobs": {
		"ci-linux": {
			"runs-on": "ubuntu-latest",
			"steps": [
				{ "uses": "actions/checkout@v2" },
				{ "uses": "actions/setup-node@v2" },
				{ "run": "npm install" },
				{ "run": "npm test" }
			]
		},
		"ci-macos": {
			"runs-on": "macos-latest",
			"steps": [
				{ "uses": "actions/checkout@v2" },
				{ "uses": "actions/setup-node@v2" },
				{ "run": "npm install" },
				{ "run": "npm test" }
			]
		},
		"ci-windows": {
			"runs-on": "windows-latest",
			"steps": [
				{ "uses": "actions/checkout@v2" },
				{ "uses": "actions/setup-node@v2" },
				{ "run": "npm install" },
				{ "run": "npm test" }
			]
		}
	}
}
